<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Manage Transactions Button -->
    <Button
        android:id="@+id/btnManageTransactions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Transactions"
        android:layout_marginTop="16dp" />

    <!-- View Reports Button -->
    <Button
        android:id="@+id/btnViewReports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Reports"
        android:layout_marginTop="16dp" />

    <!-- Settings Icon -->
    <ImageView
        android:id="@+id/imgSettings"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/settings_icon"
        android:contentDescription="Settings Icon"
        android:layout_gravity="center"
        android:layout_marginTop="24dp" />

    <!-- Password Manager Icon -->
    <ImageView
        android:id="@+id/imgPasswordManager"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/password_icon"
        android:contentDescription="Password Manager Icon"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

    <!-- User Details Icon -->
    <ImageView
        android:id="@+id/imgUserDetails"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/user_icon"
        android:contentDescription="User Details Icon"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

    <!-- Exit Button -->
    <Button
        android:id="@+id/btnExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:layout_marginTop="24dp" />
</LinearLayout>
